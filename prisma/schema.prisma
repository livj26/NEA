// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"  // Direct path to SQLite file
}

model employees {
  employeeid String   @id @default(cuid())
  forename   String
  surname    String
  email      String   @unique
  password   String
  isAdmin Boolean
  shifts     shifts[]
  sessions   sessions[]
}

model shifts {
  id         String   @id @default(cuid())
  startTime  DateTime
  endTime    DateTime
  date       DateTime
  employeeid String
  employee   employees @relation(fields: [employeeid], references: [employeeid])
}

model sessions {
  id         String   @id @default(cuid())
  token      String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employeeid String
  employee   employees @relation(fields: [employeeid], references: [employeeid])
}